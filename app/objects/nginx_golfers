upstream puma_golfers_staging { 
  server unix:/home/developer/apps/golfers/shared/tmp/sockets/puma.sock fail_timeout=0;
}

server {
  listen 80;
  server_name golfers.stevealex.us golfers.staging.local;
  root /home/developer/apps/golfers/current/public;
  try_files $uri/index.html $uri @puma_golfers_staging;

  client_max_body_size 4G;
  keepalive_timeout 10;

  error_page 500 502 504 /500.html;
  error_page 503 @503;

  location @puma_golfers_staging {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $host;
    proxy_redirect off;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "Upgrade";
    proxy_set_header X-Forwarded-Proto http;
    proxy_pass http://puma_golfers_staging;
    # limit_req zone=one;
    access_log /home/developer/apps/golfers/current/log/nginx.access.log;
    error_log /home/developer/apps/golfers/current/log/nginx.error.log;
  }

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  location = /50x.html {
    root html;
  }

  location = /404.html {
    root html;
  }

  location @503 {
    error_page 405 = /system/maintenance.html;
    if (-f $document_root/system/maintenance.html) {
      rewrite ^(.*)$ /system/maintenance.html break;
    }
    rewrite ^(.*)$ /503.html break;
  }

  if ($request_method !~ ^(GET|HEAD|PUT|PATCH|POST|DELETE|OPTIONS)$ ){
    return 405;
  }

  if (-f $document_root/system/maintenance.html) {
    return 503;
  }
}
