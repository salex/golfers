div[class="grid grid-cols-2 md:hidden lg:hidden xl:hidden"]
  - mapping = get_col_mapping(@players.size,2)
  - 2.times do |i|
    div[class=""]
      - mapping[i].each do |m|
        div[class="btn-schedule wc-2 h-8" 
           id="#{@players[m].id}" 
           data-scheduler-target='player' 
           data-action="click->scheduler#add_player" 
           data-playerid="#{@players[m].id}"] = @players[m].name
           /[0..16]

