              td  
              td  
              td  
              td 
              td 
              td
          tr
            th.text-left Par
            th
            - 0.upto(8) do |i|
              th = par_in[i]

            th  
            th
            - 0.upto(8) do |i|
              th = par_out[i]
            th 
            th 
            th
          - 2.times do |i| 
            tr
              - if i == 0
                td.italic.text-zinc-300 Hole Score
              - else
                td.italic.text-zinc-300 Side Score
              td 
              td  
              td  
              td  
              td  
