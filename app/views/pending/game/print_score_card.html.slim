            th.w-10 &nbsp;2 
            th.w-10 &nbsp;3 
            th.w-10 &nbsp;4 
            th.w-10 &nbsp;5 
            th.w-10 &nbsp;6 
            th.w-10 &nbsp;7 
            th.w-10 &nbsp;8 
            th.w-10 &nbsp;9 
            th.w-10 In
            th.w-10 i
            th.w-10 10
            th.w-10 11  
            th.w-10 12 
            th.w-10 13 
            th.w-10 14 
            th.w-10 15 
            th.w-10 16 
            th.w-10 17 
            th.w-10 18 
            th.w-10 Ou
            th.w-10 T
            th.w-10 +- 

        tbody
          - 4.times do |i|
            - n = q =  w = '.' # need something other than space
            - if players[i].present?
              
              - n = players[i][:name]
              - q = players[i][:quota]
              - w = players[i][:initial]

            tr
              td.elem7p = n
              td = q
              td  
              td  
